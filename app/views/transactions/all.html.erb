<%# * Title %>
<h2 class="text-center">Transactions</h2>

<%# * No. of Transactions %>
<p class="mt-3 fw-bold text-center text-info">Total number of Transactions: <%= Transaction.count %></p>

<%# * search %>
<%= render partial: "shared/search", locals: {message: "Recipe Number",
                                              path: transactions_all_path, search: :recipe_no_cont} %>

<%# * show all transactions %>
<%= render partial: "shared/results",
      locals: {instances: @transactions, id: "transactions", path: transactions_all_path(format: :turbo_stream, q: params[:q]&.to_unsafe_h)} %>
