<div id="show-transaction" class="col-md-5 mx-auto mt-5 shadow bg-body-tertiary border border-1 border-success fs-5 py-4 px-4">
    <div class="row py-3">
        <div class="col-4 fw-bold text-end">
            <span>Payer</span>
        </div>
        <div class="col-8 border-bottom border-2 border-success fst-italic">
            <%= link_to @sabeel.name, @sabeel, class: "btn btn-outline-success" %>
        </div>
    </div>
    <div class="row py-3">
        <div class="col-4 fw-bold text-end">
            <span>Amount</span>
        </div>
        <div class="col-8 border-bottom border-2 border-success text-success fst-italic">
            <i class="fa-solid fa-indian-rupee-sign"></i><%= @transaction.amount.to_s %>
        </div>
    </div>
    <div class="row py-3">
        <div class="col-4 fw-bold text-end">
            <span>Type</span>
        </div>
        <div class="col-8 border-bottom border-2 border-success fst-italic">
            <%= @transaction.mode.capitalize %>
        </div>
    </div>
    <div class="row py-3">
        <div class="col-4 fw-bold text-end">
            <span>Date</span>
        </div>
        <div class="col-8 border-bottom border-2 border-success fst-italic">
            <%= readable_date(@transaction.date) %>
        </div>
    </div>
</div>
