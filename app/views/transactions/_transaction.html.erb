<% @transactions.each do |transaction| %>
  <div class="row py-3 border-bottom border-light">
    <div class="col">
      <%= button_to transaction.recipe_no, transaction, method: :get, class: "btn btn-outline-primary btn-sm px-3" %>
    </div>
    <div class="col fst-italic fw-bold">
      <%= rupees transaction.amount %>
    </div>
    <div class="col">
      <%= button_to transaction.thaali.number, transaction.thaali, method: :get, class: "btn btn-outline-secondary btn-sm py-1" %>
    </div>
    <div class="col text-secondary">
      <%= time_ago_in_words(transaction.date) %>
    </div>
  </div>
<% end %>
