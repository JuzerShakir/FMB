<div class="container col-xxl-6 col-xl-7 col-lg-8 col-md-11 col-sm-10 pt-4 p-5 bg-white bg-opacity-50 shadow-lg border border-2 border-success-subtle rounded-4 mb-5">
  <%= simple_form_for @transaction, url: url_helper do |f| %>
    <%= f.error_notification %>
    <%= f.input :recipe_no %>
    <%= f.input :amount, hint: "Amount shouldn't be greater than: â‚¹#{total_balance}" %>
    <% if action_name == "edit" %>
      <%= f.input :mode, collection: collection_of(Transaction.modes), as: :radio_buttons %>
    <% else %>
      <%= f.input :mode, input_html: {checked: false}, collection: collection_of(Transaction.modes), as: :radio_buttons %>
    <% end %>
    <%= f.input :date, order: %i[day month year] %>
    <%= f.button :submit, action_name: %>
  <% end %>
</div>
