<%= simple_form_for @transaction, url: url_helper do |f| %>
    <%= f.error_notification %>
    <%= f.input :recipe_no %>
    <%= f.input :amount %>
    <%= f.input :mode, collection: Transaction.modes.keys.map{ |mode| [mode.titleize, mode] }, include_blank: false %>
    <%= f.input :on_date, input_html: { class: "mb-5" }%>
    <%= f.button :submit %>
<% end %>