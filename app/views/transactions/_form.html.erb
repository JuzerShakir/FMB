<% amount_message = "Amount shouldn't be greater than: #{@total_balance}" %>

<%= simple_form_for @transaction, url: url_helper do |f| %>
    <%= f.error_notification %>
    <%= f.input :recipe_no %>
    <%= f.input :amount, hint: amount_message %>
    <%= f.input :mode, collection: Transaction.modes.keys.map{ |mode| [mode.titleize, mode] } %>
    <%= f.input :on_date, input_html: { class: "mb-4" }%>
    <%= f.button :submit %>
<% end %>