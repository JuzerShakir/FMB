<p><%= @transaction.on_date.to_time.strftime('%A, %b %d %Y') %></p>

<%= render partial: "shared/actions",
    locals: { edit_path: edit_transaction_path(@transaction), model: "Transaction" } %>

<%= render partial: "shared/destroy_modal",
     locals: {destroy_path: @transaction, message: "delete Transaction reciepe no: #{@transaction.recipe_no}?" } %>