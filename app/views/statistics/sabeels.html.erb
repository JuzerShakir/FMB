<% content_for :title, "Sabeel Statistics" %>


<% content_for :heading do %>
  <h2>Sabeel Statistics</h2>
<% end %>

<%# * No. of Sabeels %>
<p class="text-center text-info fw-bold fs-4">Total number of Sabeels: <em><%= Sabeel.count %></em></p>

<%# * Content %>
<% @apts.each do |apartment, values| %>
  <section id="<%= apartment %>" class="container col-lg-8 offset-lg-2 border border-2 border-light rounded-5 shadow bg-white bg-opacity-75 text-center my-5 p-3">
    <h3 class="heading"><%= apartment.to_s.titleize %></h3>

    <nav class="row justify-content-evenly mt-3">
      <%= link_to "Active: #{values[:active_thaalis]}", sabeels_active_path(apartment), class: "default-btn btn-outline-success" %>
      <%= link_to "Inactive: #{values[:inactive_thaalis]}", sabeels_inactive_path(apartment), class: "default-btn btn-outline-danger" %>
    </nav>

    <div class="row mt-2 fw-bold">
      <p class="col text-info">Small: <em class="fst-normal"><%= values[:small] %></em></p>
      <p class="col text-secondary">Medium: <em class="fst-normal"><%= values[:medium] %></em></p>
      <p class="col text-success">Large: <em class="fst-normal"><%= values[:large] %></em></p>
    </div>

    <div class="row mt-3">
      <strong class="fw-bold text-success fs-5">Total Sabeels: <%= values[:total_sabeels] %></strong>
    </div>

  </section>
<% end %>
