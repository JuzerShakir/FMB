<div class="col-md-2 mx-auto mt-5 rounded-5 shadow fs-5 py-3">
    <div class="row border-bottom m-0">
        <div class="col fw-bolder py-3 text-end">
            <span>Size</span>
        </div>
        <div class="col py-3 text-primary">
            <%= @thaali_takhmeen.size.capitalize %>
        </div>
    </div>
    <div class="row border-bottom m-0">
        <div class="col fw-bolder py-3 text-end">
            <span>Niyat</span>
        </div>
        <div class="col py-3 text-info">
            <%= @thaali_takhmeen.show_currency_for(@thaali_takhmeen.total) %>
        </div>
    </div>
    <div class="row border-bottom m-0">
        <div class="col fw-bolder py-3 text-end">
            <span>Paid</span>
        </div>
        <div class="col py-3 text-success">
            <%= @thaali_takhmeen.show_currency_for(@thaali_takhmeen.paid) %>
        </div>
    </div>
    <div class="row border-bottom m-0">
        <div class="col fw-bolder py-3 text-end">
            <span>Balance</span>
        </div>
        <div class="col py-3 text-danger">
            <%= @thaali_takhmeen.show_currency_for(@thaali_takhmeen.balance) %>
        </div>
    </div>
    <div class="row">
        <div class="col fw-bolder py-3 text-end">
            <span>Done?</span>
        </div>
        <div class="col py-3 text-info">
            <%= @thaali_takhmeen.is_complete %>
        </div>
    </div>
</div>