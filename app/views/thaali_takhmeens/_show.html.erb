<div id="show-thaali_takhmeen" class="col-7 col-lg-3 mx-auto mt-5 rounded-5 shadow fs-5 py-3">
    <div class="row border-bottom border-3 m-0 pb-3">
        <div class="col fw-bolder text-end">
            <span>Size</span>
        </div>
        <div class="col text-primary">
            <%= @thaali_takhmeen.size.capitalize %>
        </div>
    </div>
    <div class="row border-bottom border-3 m-0 py-3">
        <div class="col fw-bolder text-end">
            <span>Total</span>
        </div>
        <div class="col text-info">
            <i class="fa-solid fa-indian-rupee-sign"></i><%= "#{@thaali_takhmeen.total}" %>
        </div>
    </div>
    <div class="row border-bottom border-3 m-0 py-3">
        <div class="col fw-bolder text-end">
            <span>Paid</span>
        </div>
        <div class="col text-success">
            <i class="fa-solid fa-indian-rupee-sign"></i><%= "#{@thaali_takhmeen.paid}" %>
        </div>
    </div>
    <div class="row border-bottom border-3 m-0 py-3">
        <div class="col fw-bolder text-end">
            <span>Balance</span>
        </div>
        <div class="col text-danger">
            <i class="fa-solid fa-indian-rupee-sign"></i><%= "#{@thaali_takhmeen.balance}" %>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col fw-bolder text-end">
            <span>TC</span>
        </div>
        <div class="col text-info">
            <%= render partial: "shared/takhmeen_complete", locals: { takhmeen: @thaali_takhmeen } %>
        </div>
    </div>
</div>