<%# * Title %>
<h2 class= "text-center">Thaali <span class="text-muted">#<%= "#{@thaali_takhmeen.number}" %></span></h2>
<h4 class= "text-center">of ITS <%= link_to @sabeel.its, sabeel_path(@sabeel), class: "btn btn-outline-primary" %>
    <span class="text-muted">(<%= @thaali_takhmeen.year %>)</span> </h4>


<%# * show %>
<%= render partial: "show" %>


<%# * action buttons %>
<%= render partial: "shared/actions",
    locals: { edit_path: edit_takhmeen_path(@thaali_takhmeen) } %>


<%# * destroy Modal %>
<%= render partial: "shared/destroy_modal",
     locals: {destroy_path: takhmeen_path(@thaali_takhmeen), message: "delete Thaali no: #{@thaali_takhmeen.number}?" } %>


<%# * Transactions %>
<%= button_to "New Transaction", new_takhmeen_transaction_path(@thaali_takhmeen), method: :get,  class: "btn btn-success mt-5 vstack mx-auto" unless @thaali_takhmeen.is_complete %>

<p class="fw-bold mt-3 text-center text-info">Total number of Transactions: <%= @transactions.count %></p>

<div id="transactions" class="mt-3">
    <div class="container text-center form-card">
        <% if @transactions.any? %>
            <%= render "transactions/theader"  %>
            <%= render "transactions/transaction_content" %>
        <% end %>
    </div>
</div>