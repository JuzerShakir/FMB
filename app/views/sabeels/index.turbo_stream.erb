<%= turbo_stream.append :sabeels do %>
    <% @sabeels.each do |sabeel| %>
        <div class="row py-3 fs-5 border-bottom border-light">
            <div class="col">
                <%= button_to sabeel.its, sabeel, method: :get, class: "btn btn-outline-primary btn-sm px-3" %>
            </div>
            <div class="col fw-bold">
                <%= sabeel.hof_name %>
            </div>
            <div class="col text-secondary">
                <%= sabeel.address %>
            </div>
            <div class="col text-secondary">
                <%= sabeel.mobile %>
            </div>
        </div>
    <% end %>
<% end %>

<% if @pagy.next.present? %>
    <%= turbo_stream.replace :pagination do %>
        <% turbo_frame_tag :pagination, loading: :lazy, src: all_sabeels_path(format: :turbo_stream, page: @pagy.next, q: params[:q]&.to_unsafe_h) %>
    <% end %>
<% end %>