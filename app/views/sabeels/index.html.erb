<%# * Title %>
<h2 class= "text-center">All Sabeels</h2>


<%# * search %>
<div id="search" class="col-md-4 offset-md-4 mt-5" role="search">
    <%= search_form_for @q, data: { turbo_frame: :results } do |f| %>
      <%= f.search_field :hof_name_or_its_cont,
            oninput: 'this.form.requestSubmit()', placeholder: "Search By HOF Name or ITS No.",
                class: "form-control",  type: "search", autofocus: true, autocomplete: "off"  %>
    <% end %>
</div>


<%# * show %>
<%= turbo_frame_tag :results do %>
    <div id="sabeels" class="mt-5">
        <div class="container text-center">
            <% if @sabeels.any? %>
                <%= render partial: "all_sabeels" %>
            <% else %>
                <%= render partial: "shared/no_results"%>
            <% end %>
        </div>
    </div>
<% end %>