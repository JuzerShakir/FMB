<div class="c-bg border shadow-lg container col-lg-4 offset-lg-4 p-5 rounded-5">
  <%= simple_form_for @sabeel do |f| %>
    <%= f.error_notification %>
    <%= f.input :its, required: true %>
    <%= f.input :name, placeholder: "Shk. Fakruddin Nakhudawala" %>
    <%= f.input :apartment, collection: APARTMENTS.map { |apartment| [apartment.to_s.titleize, apartment] } %>
    <%= f.input :flat_no, required: true %>
    <%= f.input :mobile, required: true, placeholder: "9876543210" %>
    <%= f.input :email %>
    <%= f.button :submit %>
  <% end %>
</div>

