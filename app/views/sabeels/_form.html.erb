<%= simple_form_for @sabeel do |f| %>
    <%= f.error_notification %>
    <%= f.input :its, label: "ITS Number", hint: "must be exactly 8 characters long" %>
    <%= f.input :hof_name, label: "HOF Name", placeholder: "Shk. Fakruddin Nakhudawala" %>
    <%= f.input :apartment, collection: Sabeel.apartments.keys.map{ |apartment| [apartment.titleize, apartment] }, include_blank: false %>
    <%= f.input :flat_no %>
    <%= f.input :mobile, hint: "without the country code", placeholder: "9876543210" %>
    <%= f.input :email, input_html: { class: "mb-5" }%>
    <%= f.button :submit %>
<% end %>