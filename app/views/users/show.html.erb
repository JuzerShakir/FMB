<% content_for :title, "User: #{@user.name}" %>

<%= render @user %>

<%# * action buttons %>
<div class="col-5 col-md-4 col-lg-3 col-xl-2 vstack gap-2 mx-auto mt-5 fs-6">
  <%= link_to "Edit", edit_user_path(@user), class: "btn btn-info" if current_user == @user %>

  <!-- DESTROY Button triggers destroy modal -->
  <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#destroyModal">
    Delete
  </button>
  <%# * destroy Modal %>
  <%= render "shared/destroy_modal", instance: @user %>
</div>
