<% content_for :title, "User: #{@user.name}" %>

<%= render @user %>

<% content_for :heading do %>
  <h2><%= @user.name %></h2>
<% end %>

<%# * action buttons %>
<section id="actions">
  <% if current_user == @user %>
    <%= render "shared/actions", instance: @user %>
  <% else %>
    <nav class="col-5 col-md-4 col-lg-3 col-xl-2 vstack gap-2 mx-auto mt-5">
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#destroyModal">
        Delete
      </button>
      <%= render "shared/destroy_modal", instance: @user %>
    </nav>
  <% end %>
</div>
