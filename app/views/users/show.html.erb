<%# * Title %>
<h2 class="text-center">Show User</h2>

<%# * show %>
<%= render "show" %>

<%# * action buttons %>
<% if current_user == @user %>
  <%= render partial: "shared/actions", locals: {edit_path: edit_user_path(@user)} %>
<% else %>
  <div class="vstack gap-2 col-sm-3 mx-auto mt-5">
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#destroyModal">Delete</button>
  </div>
<% end %>

<%# * destroy Modal %>
<% if current_user == @user %>
  <%= render partial: "shared/destroy_modal", locals: {
    destroy_path: @user, message: "your account"
  } %>
<% else %>
    <%= render partial: "shared/destroy_modal", locals: {
    destroy_path: @user, message: @user.class.name
  } %>
<% end %>
