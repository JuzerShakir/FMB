<div id="users">
  <% @users.each do | user | %>
    <div class="row py-3">
      <div class="col">
        <%= link_to user.name, user_path(user), class: "btn btn-outline-primary btn-sm px-3" %>
      </div>
      <div class="col">
        <%= user.roles_name.first.capitalize %>
      </div>
    </div>
  <% end %>
</div>
