<% @thaalis.each do |thaali| %>
  <%= link_to(thaali, id: dom_id(thaali), class: "row py-2 link-underline link-underline-opacity-0") do %>
    <em class="col fw-medium fst-normal">
      <%= highlight(thaali.number.to_s, params.dig(:q, :number_eq)) %>
    </em>
    <em class="col-6 col-md-4 text-info fw-medium text-truncate fst-normal">
      <%= thaali.sabeel_name %>
    </em>
    <strong class="col <%= thaali.dues_cleared? ? "fw-bold text-success" : "fst-normal text-danger" %>">
      <%= add_rupees_symbol_to thaali.balance %>
    </strong>
  <% end %>
<% end %>
