<div class="c-bg border shadow-lg container col-lg-4 offset-lg-4 p-5 rounded-5">
  <%= simple_form_for @thaali, url: url_helper do |f| %>
    <%= f.error_notification %>

    <%# for new thaali it will show current year %>
    <% if @thaali.year.nil? %>
      <%= f.input :year, disabled: true, input_html: {value: CURR_YR} %>

    <%# for existing thaali it will show its year %>
    <% else %>
      <%= f.input :year, disabled: true %>
    <% end %>

    <%= f.input :number, required: true %>
    <%= f.input :size, collection: SIZES.map { |size| [size.titleize, size] } %>
    <%= f.input :total, required: true %>
    <%= f.button :submit %>
  <% end %>
</div>

<%# * back button %>
<%= render partial: "shared/back" %>
